<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Combined Ballot Creation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-section {
            margin-bottom: 30px;
        }

        .form-section label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-section input[type="text"],
        .form-section input[type="date"],
        .form-section input[type="number"],
        .form-section input[type="file"] {
            width: calc(100% - 10px);
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            margin-top: 5px;
            margin-bottom: 10px;
        }

        .form-section input[type="date"]::-webkit-calendar-picker-indicator {
            cursor: pointer;
        }

        .buttons {
            text-align: center;
            margin-top: 20px;
        }

        .buttons button {
            padding: 10px 20px;
            border: none;
            background-color: #4caf50;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-right: 10px;
        }

        .buttons button:hover {
            background-color: #45a049;
        }

        /* Style for Add Office and Add Candidate buttons */
        .add-button {
            padding: 10px 20px;
            border: none;
            background-color: #008CBA;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-left: 10px;
        }

        .add-button:hover {
            background-color: #005f79;
        }

    </style>
</head>
<body>
    <div class="container">
        <h2>Combined Ballot Creation</h2>

        <!-- Ballot Information Section -->
        <div class="form-section">
            <h3>Ballot Information</h3>
            <form id="ballotForm" action="create_ballot.html" method="post">
                <label for="ballotName">Enter Ballot Name:</label>
                <input type="text" id="ballotName" name="ballotName" required>
                <br>
                <label for="startDate">Enter Election Start Date:</label>
                <input type="date" id="startDate" name="startDate" required>
                <br>
                <label for="endDate">Enter Election End Date:</label>
                <input type="date" id="endDate" name="endDate" required>
                <br>
            </form>
        </div>

        <!-- Office Information Section -->
        <div class="form-section">
            <h3 style="display: inline-block;">Office Information</h3>
            <button class="add-button" type="button" onclick="addOfficeForm()">Add Office</button>
            <div id="officeForms">
                <!-- Initial office form -->
                <form class="officeForm" action="create_office.html" method="post">
                    <!-- Office form fields -->
                    <label for="officeName">Enter Office Name:</label>
                    <input type="text" name="officeName" required>
                    <br>
                    <label for="numVotes">Number of Votes:</label>
                    <input type="number" name="numVotes" min="1" required>
                    <br>
                    <!-- Candidate fields -->
                    <div class="candidateFields">
                        <label for="candidateFName">Enter Candidate First Name:</label>
                        <input type="text" name="candidateFName" required>
                        <br>
                        <label for="candidateLName">Enter Candidate Last Name:</label>
                        <input type="text" name="candidateLName" required>
                        <br>
                        <label for="candidatePhoto">Upload Candidate Photo:</label>
                        <input type="file" name="candidatePhoto" accept="image/*">
                        <br>
                    </div>
                    <button class="add-button" type="button" onclick="addCandidateFields(this)">Add Candidate</button>
                </form>
            </div>
        </div>

        <div class="buttons">
            <button type="button" onclick="submitBallot()">Submit Ballot</button>
        </div>
    </div>

    <script>
        // Function to add a new office form
        function addOfficeForm() {
            const officeForms = document.getElementById('officeForms');
            const newOfficeForm = document.querySelector('.officeForm').cloneNode(true);
            
            // Remove extra candidate fields from the cloned office form
            const candidateFields = newOfficeForm.querySelectorAll('.candidateFields');
            if (candidateFields.length > 1) {
                for (let i = 1; i < candidateFields.length; i++) {
                    candidateFields[i].remove();
                }
            }
            
            officeForms.appendChild(newOfficeForm);
        }
    
        // Function to add candidate fields to a specific office form
        function addCandidateFields(button) {
            const officeForm = button.parentNode;
            const candidateFields = document.createElement('div');
            candidateFields.classList.add('candidateFields');
            // Add candidate fields
            candidateFields.innerHTML = `
                <label for="candidateFName">Enter Candidate First Name:</label>
                <input type="text" name="candidateFName" required>
                <br>
                <label for="candidateLName">Enter Candidate Last Name:</label>
                <input type="text" name="candidateLName" required>
                <br>
                <label for="candidatePhoto">Upload Candidate Photo:</label>
                <input type="file" name="candidatePhoto" accept="image/*">
                <br>
            `;
            officeForm.insertBefore(candidateFields, button.nextSibling);
        }
    
        // Function to submit the ballot form
        function submitBallot() {
            // Submit all form data
            // You might want to handle form submission logic here
        }
    </script>
    
</body>
</html>
