<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elections Associated with <%= societyName %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
            overflow-y: auto;
            max-height: 600px; 
        }

        h1, h2 {
            text-align: center;
            padding-top: 50px;
        }

        .election-btn {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #4caf50;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .election-btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Elections Associated with <%= societyName %></h1>

        <% if (pastElections.length > 0) { %>
            <h2>Past Elections</h2>
            <% pastElections.forEach(function(election) { %>
                <% const title = election['Election Title']; %>
                <button class="election-btn" onclick="goToElection('<%= societyName %>','<%= title %>')"><%= election['Election Title'] %></button>
            <% }); %>
        <% } %>

        <% if (presentElections.length > 0) { %>
            <h2>Present Elections</h2>
            <% presentElections.forEach(function(election) { %>
                <% const title = election['Election Title']; %>
                <button class="election-btn" onclick="goToElection('<%= societyName %>','<%= title %>')"><%= election['Election Title'] %></button>
            <% }); %>
        <% } %>

        <% if (futureElections.length > 0) { %>
            <h2>Future Elections</h2>
            <% futureElections.forEach(function(election) { %>
                <% const title = election['Election Title']; %>
                <button class="election-btn" onclick="goToElection('<%= societyName %>','<%= title %>')"><%= election['Election Title'] %></button>
            <% }); %>
        <% } %>

    </div>

    <script>
        function goToElection(society, election) {
            window.location.href = '/soc_assigned/' + encodeURIComponent(society) + '/' + encodeURIComponent(election);
        }
        function checkTokenLocalStorage() {
            if (!localStorage.getItem('token')) {
                // Redirect to login page if token doesn't exist in localStorage
                window.location.href = '/';
            }
        }
        function logout() {
            localStorage.removeItem('token');
            // Redirect to login page after logout
            window.location.href = '/';
        }
        // Function to handle the pageshow event
        function handlePageShow(event) {
            if (event.persisted) {
                // If the page is shown from the cache (e.g., when navigating back),
                // check if the token is still in local storage
                checkTokenLocalStorage();
            }
        }

        // Add event listener for the pageshow event
        window.addEventListener('pageshow', handlePageShow);

    </script>
</body>
</html>
