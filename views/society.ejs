<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elections Associated with <%= societyName %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
            overflow-y: auto;
            max-height: 600px; 
        }

        h1, h2 {
            text-align: center;
            padding-top: 50px;
        }

        .election-btn {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #4caf50;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .election-btn:hover {
            background-color: #45a049;
        }

        .buttons {
            text-align: center;
        }

        .buttons button {
            padding: 10px 20px;
            border: none;
            background-color: #4caf50;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .buttons button:hover {
            background-color: #45a049;
        }
        </style>
        </head>

        <body>
    <div class="container">
        <h1>Elections Associated with <%= societyName %></h1>

        <% if (pastElections.length > 0) { %>
            <h2>Past Elections</h2>
            <ul>
                <% pastElections.forEach(function(election) { %>
                    <li>
                        <button class="election-btn" onclick="goToElection('<%= societyName %>','<%= election.title %>')">
                            <%= election.title %>
                        </button>
                    </li>
                <% }); %>
            </ul>
        <% } %>

        <% if (presentElections.length > 0) { %>
            <h2>Present Elections</h2>
            <ul>
                <% presentElections.forEach(function(election) { %>
                    <li>
                        <button class="election-btn" onclick="goToElection('<%= societyName %>','<%= election.title %>')">
                            <%= election.title %>
                        </button>
                    </li>
                <% }); %>
            </ul>
        <% } %>

        <% if (futureElections.length > 0) { %>
            <h2>Future Elections</h2>
            <ul>
                <% futureElections.forEach(function(election) { %>
                    <li>
                        <button class="election-btn" onclick="goToElection('<%= societyName %>','<%= election.title %>')">
                            <%= election.title %>
                        </button>
                    </li>
                <% }); %>
            </ul>
        <% } %>

        <div class="buttons">
            <button type="button" onclick="goToCreateBallot()">Create Ballot</button>
        </div>

    </div>

    <script>
        function goToElection(society, election) {
            window.location.href = '/soc_assigned/' + encodeURIComponent(society) + '/' + encodeURIComponent(election);
        }

        function goToCreateBallot() {
            window.location.href = '/soc_assigned/ballot_info' ;
        }
        
    </script>
</body>
</html>

