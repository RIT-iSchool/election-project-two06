<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elections Associated with <%= societyDetails.societyName %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
            overflow-y: auto;
            max-height: 600px; 
        }

        h1, h2 {
            text-align: center;
            padding-top: 50px;
        }

        .election-btn {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            background-color: #4caf50;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .election-btn:hover {
            background-color: #45a049;
        }

        .buttons {
            text-align: center;
        }

        .buttons button {
            padding: 10px 20px;
            border: none;
            background-color: #4caf50;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .buttons button:hover {
            background-color: #45a049;
        }
    </style>
    </head>

<body>
<div class="container">
    <h1>Elections Associated with <%= societyDetails.societyname %></h1>
    <div class="buttons">
        <button class="option" onclick="goToCreateBallot('<%= societyDetails.societyid %>')">Create Ballot</button>
        <button class="option" onclick="goToBallotInit()">Create/Edit Ballot Initiatives</button>
    </div>
    <% function formatDate(dateString) { %>
        <!-- Parse the dateString into a Date object -->
        <% const date = new Date(dateString); %>
        
        <!-- Format the date components manually -->
        <% const monthNames = ["January", "February", "March", "April", "May", "June",
            "July", "August", "September", "October", "November", "December"]; %>
        <% const month = monthNames[date.getMonth()]; %>
        <% const day = date.getDate(); %>
        <% const year = date.getFullYear(); %>
        <% const hours = date.getHours(); %>
        <% const minutes = date.getMinutes(); %>
        <% const seconds = date.getSeconds(); %>
        <% const ampm = hours >= 12 ? 'PM' : 'AM'; %>
        <% const formattedHours = hours % 12 || 12; %>
        
        <!-- Construct the formatted date string -->
        <% const formattedDateString = month + ' ' + day + ' ' + year + ', ' + formattedHours + ':' + (minutes < 10 ? '0' : '') + minutes + ':' + (seconds < 10 ? '0' : '') + seconds + ' ' + ampm; %>
        
        <% return formattedDateString; %>
    <% } %>
    
    <% if (pastElections.length > 0) { %>
        <h2>Past Elections</h2>
        <% pastElections.forEach(function(election) { %>
            <button class="election-btn" onclick="goToElection('<%= societyDetails.societyname %>','<%= election.ballottitle %>')">
                <%= election.ballottitle %> - <%= formatDate(election.startdate) %> to <%= formatDate(election.enddate) %>
            </button>
        <% }); %>
    <% } %>
    
    <% if (presentElections.length > 0) { %>
        <h2>Present Elections</h2>
        <% presentElections.forEach(function(election) { %>
            <button class="election-btn" onclick="goToElection('<%= societyDetails.societyname %>','<%= election.ballottitle %>')">
                <%= election.ballottitle %> - <%= formatDate(election.startdate) %> to <%= formatDate(election.enddate) %>
            </button>
        <% }); %>
    <% } %>

    <% if (futureElections.length > 0) { %>
        <h2>Future Elections</h2>
        <% futureElections.forEach(function(election) { %>
            <button class="election-btn" onclick="goToEditElection('<%= societyDetails.societyid %>','<%= election.ballotid %>')">
                <%= election.ballottitle %> - <%= formatDate(election.startdate) %> to <%= formatDate(election.enddate) %>
            </button>
        <% }); %>
    <% } %>
</div>

    <script>
        function goToBallotInit() {
            window.location.href = '/ballotinit';
        }
        function goToElection(society, election) {
            window.location.href = '/soc_assigned/' + encodeURIComponent(society) + '/' + encodeURIComponent(election);
        }
        function goToEditElection(societyid, electionid) {
            window.location.href = '/soc_assigned/socId=' + encodeURIComponent(societyid) + '/ballotId=' + encodeURIComponent(electionid)
        }
        function goToCreateBallot(id) {
            window.location.href = '/soc_assigned/socId=' + encodeURIComponent(id) + '/ballot_info' ;
        }
        
    </script>
</body>
</html>
